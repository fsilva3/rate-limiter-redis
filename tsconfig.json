{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "files": [
        "src/index.ts",
        "src/types.ts"
    ],
    "include": ["src/**/*", "src/*.d.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
}